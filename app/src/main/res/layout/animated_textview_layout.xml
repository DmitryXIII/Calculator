<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/txt_argOne"
        style="@style/AnimatedViewStyle"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/txt_operand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="11111111111" />

    <TextView
        android:id="@+id/txt_operand"
        style="@style/AnimatedViewStyle"
        app:layout_constraintBottom_toTopOf="@id/txt_argTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="11111111111" />

    <TextView
        android:id="@+id/txt_argTwo"
        style="@style/AnimatedViewStyle"
        app:layout_constraintBottom_toTopOf="@id/txt_enter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="11111111111" />

    <TextView
        android:id="@+id/txt_enter"
        style="@style/AnimatedViewStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="11111111111" />
</androidx.constraintlayout.widget.ConstraintLayout>